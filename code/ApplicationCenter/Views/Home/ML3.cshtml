<script>
    //var tm = new Date();
    var page = 1;
    var pageSize = 10;
    var lastTime;

    $(document).ready(function () {
        $('#scroller ul').empty();
        listViewDataBound(1);
        //loadData();
        /*for (var i = 1; i <= pageSize; ++i) {
            $('#scroller ul').append('<li>' + i + '</li>');
        }*/
    });

    function loadData() {
        $('#scroller ul').empty();
        var startIndex = (page - 1) * pageSize + 1;
        for (var i = startIndex; i <= page * pageSize; ++i) {
            $('#scroller ul').append('<li>'+i+'</li>');
        }
    }

    function attachToScroller(e) {
        var scroller = e.view.scroller;
        var lineHeight = $('#scroller ul li').css('height');
        lineHeight = parseFloat(lineHeight);
        var heightDiff = lineHeight * 12;

        scroller.setOptions({
            pullTemplate: "下拉刷新数据",
            refreshTemplae: "数据加载中。。。",
            releaseTemplate: "释放可刷新数据",
            pullToRefresh: true,
            pull: function () {
                //updateClock();
                next_click();
                setTimeout(function () { scroller.pullHandled(); }, 400);
            }
        })

        scroller.bind("scroll", function (e) {
            return;
            var scrollHeight = scroller.scrollHeight();
            //alert(scrollHeight);
            var tm = new Date();
            var second = tm.getSeconds();
            //alert(scrollHeight);
            if (e.scrollTop > scrollHeight - heightDiff) {
                if (lastTime != null) {
                    var s = lastTime.getSeconds() - second;
                    s = Math.abs(s);
                    if (s > 0.5) {
                        //scroller.reset();
                        //++page;
                        //alert(page);
                        next_click();
                        //scroller.reset();
                    }
                }
            }
            else if (e.scrollTop < 0) {

                if (lastTime != null) {
                    var s = lastTime.getSeconds() - second;
                    s = Math.abs(s);
                    if (s > 0.5) {
                        //scroller.animatedScrollTo(0, 1);
                        //--page;
                        //alert(page);
                        prev_click();
                        //scroller.reset();
                    }
                } else {
                    scroller.animatedScrollTo(0, 1);
                    //--page;
                    //alert(page);
                    prev_click();
                    scroller.reset();
                }


            }
            //$('#scroller ul').css('background-color', '#FFFFFF');
            lastTime = tm;
            //alert(e(e.scrollTop));
        });
    }

    function foo() {
        //alert("foo!");
        $('#scroller ul').empty();
        next_click();
    }

    var app = new kendo.mobile.Application(document.body);
</script>
